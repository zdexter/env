[user]
	name = Zach Dexter
	email = zach.dexter@gmail.com

[alias]
	st = status
	ci = commit
	br = branch
	co = checkout
	shs = stash save
	shp = stash pop
	shl = stash list
	df = diff --patience --color
	dfs = diff --patience --color --staged
    pl = pull -v --rebase
	ll = log --stat --abbrev-commit --color
	lol = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(cyan)<%an>%Creset'
	adp = add -p
    submod = submodule

[color]
	ui = auto # covers diff = true, status = auto, branch = auto
	interactive = auto

[push]
	default = simple
[core]
	autocrlf = input
	excludesfile = /Users/zdexter/.gitignore
    editor = vim
[web]
	browser = open
[github]
	user = zdexter
